<div class="mb-1 bg-light rounded-3 bg-securosbar text-light">
      <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold d-flex justify-content-between align-items-center">Usuarios ({{users.length}})
            <a alt="Edit" class="link-light" href="/users/create"><i class="fa fa-user-plus mx-5 green" aria-hidden="true"></i></a>
         </h1>
      </div>
    </div>

<div class="row  mb-4  rounded-3 " >
    {{#each users}}
            <div class="col-md-4 mt-2">
                <div class="card shadow rounded">
                    <div class="card-body">
                        <h4 class="card-title d-flex justify-content-between align-items-center">
                            {{this.login}} <a alt="Edit" class="link-light" href="/users/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                        </h4>
                        <p>{{this.lastname}} {{this.firstname}} </p>
                        <form action="/users/delete/{{_id}}?_method=DELETE" method="POST">
                            <input type="hidden" name="_method" value="DELETE">
                            <button class="btn btn-danger btn-sm" type="submit"><i class="fas fa-trash-alt"></i></button> 
                        </form>
                    </div>
                </div>
            </div>
    {{else}} 
    <div class="col-md-3 mx-auto">
        <div class="card mx-auto">
            <div class="card-body">
                <p class="lead">No existen usuarios.</p>
                <a href="/users/create" class="btn btn-success btn-block">Crear Usuario!</a>
            </div>
        </div>   
    </div>
    {{/each}}
   
</div>