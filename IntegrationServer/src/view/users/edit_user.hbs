<div class="col-md-4 mx-auto">
    <div class="card-block login-form">
        <div class="card-header display-6 text-light">
            <h3>Editar Usuario</h3>
        </div>
        <div class="card-body">
            <form action="/users/edit/{{User._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="mb-3"> 
                    <input type="text" id="login" class="form-control disable" name="login" placeholder="Usuario" value="{{User.login}}">
                </div>
                <div class="mb-3"> 
                    <input type="text" id="firstname" class="form-control" name="firstname" placeholder="Nombre" value="{{User.firstname}}">
                 </div>
                 <div class="mb-3"> 
                    <input type="text" id="lastname" class="form-control" name="lastname" placeholder="Apellido" value="{{User.lastname}}">
                 </div>
                <div class="d-grid gap-2">
                 <button class="btn btn-primary" type="submit">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>